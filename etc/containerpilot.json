{
  "consul": "",
  "jobs": [
    {"name": "setup", "exec": "bin/setup"},
    {{if (eq .WATCH "1")}}
    {
      "name": "watch-build",
      "exec": "bin/watch-build",
      "when": {"source": "setup", "once": "exitSuccess"},
      "restarts": "unlimited"
    },
    {
      "name": "livereload",
      "exec": "bin/livereload",
      "when": {"source": "setup", "once": "exitSuccess"},
      "restarts": "unlimited"
    },
    {{end}}
    {
      "name": "api",
      "exec": "bin/api",
      "when": {"source": "setup", "once": "exitSuccess"},
      "restarts": "unlimited"
    },
    {
      "name": "nginx",
      "exec": "bin/nginx",
      "when": {"source": "setup", "once": "exitSuccess"},
      "restarts": "unlimited"
    }
  ]
}
